{
  "name": "ophelios/zephyrus",
  "description": "Simple PHP framework",
  "authors": [
    {
      "name": "David Tucker",
      "email": "david.tucker@ophelios.com",
      "role": "Developer"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.4",
    "phug/phug": "^1.11",
    "latte/latte": "^3.0",
    "js-phpize/js-phpize-phug": "2.*",
    "symfony/yaml": "^6.3",
    "phpmailer/phpmailer": "^6.6",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-simplexml": "*",
    "ext-intl": "*",
    "ext-iconv": "*",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-posix": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "ext-zip": "*",
    "ext-ctype": "*",
    "ext-apcu": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "10.*"
  },
  "autoload": {
    "psr-4": {
      "Zephyrus\\": "src/Zephyrus"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zephyrus\\Tests\\": "tests/Zephyrus"
    }
  },
  "config": {
    "allow-plugins": {
      "nodejs-php-fallback/nodejs-php-fallback": true
    }
  }
}
